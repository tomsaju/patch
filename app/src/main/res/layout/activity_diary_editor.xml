<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7C0"
    android:padding="10dp"
    tools:context="android.tom.patcher.diary.DiaryEditorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




            <TextView
                android:id="@+id/dayNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />


        <TextView
            android:id="@+id/monthName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_alignBaseline="@+id/dayNumber"
            android:layout_alignBottom="@+id/dayNumber"
            android:layout_toEndOf="@+id/dayNumber"
            android:text="NOVEMBER"
            android:textColor="#80000000"
            android:textSize="25sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/dayNumber"
            android:includeFontPadding="false"
            android:paddingBottom="10dp"
            android:text="Sunday"
            android:textColor="#FF000000"
            android:textSize="20sp"
            android:id="@+id/dayofweek" />

        <EditText
            android:id="@+id/editTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dayofweek"
            android:ems="10"
            android:textColorHint="#989595  "
            android:hint="Title" />

        <android.tom.patcher.diary.LineEditText
            android:id="@+id/editTextContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextTitle"
            android:ems="10"
            android:gravity="start"
            android:textColorHint="#989595  "
            android:hint="Content" />

        <TextView
            android:id="@+id/yeartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="2016" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
